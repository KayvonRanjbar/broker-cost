<!DOCTYPE html>
<html data-ng-app="BrokerApp">
<head>
  <title>BrokerProject</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <base href="/">

  <!-- angular -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.js"></script>

  <script src="//d3js.org/d3.v3.min.js" charset="utf-8"></script>

  <%= javascript_include_tag 'application' %>

</head>
<body>

<nav>
  <%= link_to "Home", root_path %>
  <% if current_admin %>
    <%= link_to "Profile", admin_path(current_admin) %>
    <%= link_to "Log Out", logout_path %>
  <% else %>
    <%= link_to "Admin Log In", login_path %>
  <% end %>
</nav>
<br>

<% flash.each do |name, msg| %>
  <p>
    <small> <%= name.capitalize %>: <%= msg %> </small>
  </p>
<% end %>

<%= yield %>

</body>
</html>
